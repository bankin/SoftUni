package ponggame;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;
import java.util.Random;

public class Ball implements Runnable {
	//Global variables
	int x, y, xDirection, yDirection;
	Rectangle ball;
	
	
	public Ball(int x, int y){
		this.x = x;
		this.y = y;
		
		//Set ball moving randomly
		Random r = new Random();
		int rDir = r.nextInt(1);
		if(rDir == 0){ rDir--;	}
		setXDirection(rDir);
		int yrDir = r.nextInt(1);
		if(yrDir == 0){ yrDir--; }
		setYDirection(yrDir);
		
		//Create the ball
		ball = new Rectangle(this.x, this.y, 15, 15);
	}
	
	public void setXDirection(int xDir){
		this.xDirection = xDir;
	}
	
	public void setYDirection(int yDir){
		this.yDirection = yDir;
	}
	
	public void draw(Graphics g){
		g.setColor(Color.WHITE);
		g.fillRect(this.ball.x, this.ball.y, this.ball.width, this.ball.height);
	}
	
	public void move(){
		x += xDirection;
		y += yDirection;
		
		//Bounce the ball when edge is detected
		if(x <= 0){ setXDirection(+1); }
		if(x > 385) { setXDirection(-1); }
		if(y <= 0){ setYDirection(+1); }
		if(y > 385) { setYDirection(-1); }
	}
	
	@Override
	public void run() {
		// TODO Auto-generated method stub
		try {
			while(true){
				
			}
		} catch (Exception e) {
			System.err.println(e.getMessage());
		}
	}

	
}
